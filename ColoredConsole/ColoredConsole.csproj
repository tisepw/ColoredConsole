<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ApplicationIcon>ColoredConsole128.ico</ApplicationIcon>
    <PackageId>Tise.Util.ColoredConsole</PackageId>
    <Title>ColoredConsole</Title>
    <Version>1.1.5</Version>
    <Authors>Tise</Authors>
    <Product>ColoredConsole</Product>
    <Description>Just... Console with colors and animations for 'professional' style.</Description>
    <PackageIcon>ColoredConsole128.png</PackageIcon>
    <PackageProjectUrl>https://github.com/tisepw/ColoredConsole</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/tisepw/ColoredConsole</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>log, color, console</PackageTags>
    <PackageReleaseNotes>Update CreateLogFile method and readme https://github.com/tisepw/ColoredConsole</PackageReleaseNotes>
    <NeutralLanguage>en-US</NeutralLanguage>
    <AssemblyVersion>$(Version)</AssemblyVersion>
    <FileVersion>$(Version)</FileVersion>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="ColoredConsole128.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="ColoredConsole128.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
